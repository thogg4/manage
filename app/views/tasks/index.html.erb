<div class="row-fluid">
  <div class="span4">
    <h1>Tasks for <%= @site.title %></h1>
  </div>
  <div class="span8">
  </div>
</div>

<div class="row-fluid">
  <div class="span4">
    <%= form_for [@site, @task], :html => {:class => "full"} do |f| %>
      <%= f.label :title%>
      <%= f.text_field :title %>

      <%= f.label :body %>
      <%= f.text_area :body %>

      <%= select_tag "task[status_id]", options_for_select(Status.all.collect{ |s| [s.status, s.id] }) %>


      <div class="form-actions">
        <%= f.submit "Create Task", :class => "btn btn-primary" %>
      </div>
    <% end %>
  </div>
  <div class="span8">
    <h1>Incomplete</h1>
    <table class="table">
      <thead>
        <tr>
          <th>ID</th>
          <th>Title</th>
          <th>Status</th>
        </tr>
      </thead>
      <tbody>
        <%= render :partial => "tasks_rows", :locals => {:tasks => @incomplete_tasks} %>
      </tbody>
    </table>

    <h1>Complete</h1>
    <table class="table">
      <thead>
        <tr>
          <th>ID</th>
          <th>Title</th>
          <th>Status</th>
        </tr>
      </thead>
      <tbody>
        <%= render :partial => "tasks_rows", :locals => {:tasks => @complete_tasks} %>
      </tbody>
    </table>
  </div>
</div>
